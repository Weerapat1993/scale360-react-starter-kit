    "webpack-dev-server": "1.16.2",
    "webpack-manifest-plugin": "1.1.0",
    "whatwg-fetch": "2.0.2"
  },
  "dependencies": {
    "change-case": "^3.0.1",
    "classnames": "^2.2.5",
    "firebase": "^3.7.5",
    "immutable": "^3.8.1",
    "react": "^15.4.2",
    "react-bootstrap": "^0.31.0",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.4",
    "react-redux-firebase": "^1.4.0-rc.2",
    "react-router": "^3.0.2",
    "react-router-bootstrap": "^0.24.2",
    "redux": "^3.6.0",
    "redux-api-middleware": "^1.0.2",
    "redux-devtools-extension": "^2.13.0",
    "redux-form": "^6.6.1",
    "redux-thunk": "^2.2.0"
  },
  "scripts": {
    "start": "node app/Scripts/start.js",
    "build": "node app/Scripts/build.js",
    "test": "node app/Scripts/tests.js --env=jsdom",
    "help": "node app/Scripts/help.js",
    "make": "sh ./command.sh"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/app/Webpack/polyfills.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|deploy|docs|node_modules|scripts)[/\\\\]"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.(css|scss)$": "<rootDir>/app/Webpack/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/app/Webpack/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ],
    "plugins": [
      "transform-decorators-legacy"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}

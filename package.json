    "react-addons-test-utils": "^15.4.2",
    "react-dev-utils": "^0.5.2",
    "react-test-renderer": "^15.5.4",
    "redux-logger": "^3.0.1",
    "redux-mock-store": "^1.2.2",
    "sass-loader": "^6.0.3",
    "sinon": "^2.1.0",
    "style-loader": "0.13.1",
    "url-loader": "0.5.7",
